{
    "compilerOptions": {
      "target": "esnext",
      "lib": [
        "dom",
        "dom.iterable",
        "esnext",
        "es6"
      ],
      "outDir": "./build/",
      "sourceMap": true,
      "noImplicitAny": false,
      "allowJs": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "module": "esnext",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "noEmit": true,
      "jsx": "react",
      "noFallthroughCasesInSwitch": true,
    },
    "include": [
      "src","node_modules", "babel.config.js", "metro.config.js", "jest.config.js"
    ]
  }
  